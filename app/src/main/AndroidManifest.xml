<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autofeed">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name=".activities.UserInfo"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Temp"
            android:exported="false" />
        <activity
            android:name=".activities.EditPetProfile"
            android:exported="false"
            android:theme="@style/Theme.AutoFeed" />
        <activity
            android:name=".activities.PetProfile"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activities.NewUser"
            android:exported="false" />
        <activity
            android:name=".activities.MainPage"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.Login"
            android:exported="true"
            android:noHistory="true">

            <!-- android:theme="@style/Theme.AppCompat.NoActionBar" > -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>