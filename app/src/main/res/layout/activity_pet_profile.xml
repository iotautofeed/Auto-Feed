<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".activities.PetProfile">

    <com.github.sealstudios.fab.FloatingActionMenu
        android:id="@+id/fabMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu_buttonSpacing="15dp"
        app:menu_colorNormal="#01F1D9"
        app:menu_colorPressed="#00A594"
        app:menu_icon="@drawable/ic_baseline_add_24"
        app:menu_labels_ellipsize="none"
        app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        app:menu_labels_showAnimation="@anim/fab_slide_in_from_left"
        app:menu_labels_singleLine="false"
        app:menu_openDirection="left">


        <com.github.sealstudios.fab.FloatingActionButton
            android:id="@+id/fabChangePet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="change pet"
            android:src="@drawable/ic_baseline_change_circle_24"
            app:elevation="10dp"
            app:fabSize="normal"
            app:fab_colorNormal="#01F1D9"
            app:fab_colorPressed="#00A594">

        </com.github.sealstudios.fab.FloatingActionButton>

        <com.github.sealstudios.fab.FloatingActionButton
            android:id="@+id/fabEditPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="edit pet"
            android:src="@drawable/ic_baseline_edit_24"
            app:elevation="10dp"
            app:fabSize="normal"
            app:fab_colorNormal="#01F1D9"
            app:fab_colorPressed="#00A594">

        </com.github.sealstudios.fab.FloatingActionButton>

        <com.github.sealstudios.fab.FloatingActionButton
            android:id="@+id/fabAddPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="add pet"
            android:src="@drawable/ic_baseline_add_24"
            app:elevation="10dp"
            app:fabSize="normal"
            app:fab_colorNormal="#01F1D9"
            app:fab_colorPressed="#00A594">

        </com.github.sealstudios.fab.FloatingActionButton>
    </com.github.sealstudios.fab.FloatingActionMenu>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civPetImg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="85dp"
        android:clickable="false"
        android:elevation="5dp"
        android:src="@drawable/dog"
        app:civ_border_color="@color/lightGray"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="325dp"
        android:layout_height="560dp"
        android:background="@drawable/pet_info_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631">

        <TextView
            android:id="@+id/tvPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="92dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/lightGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPetName" />

        <TextView
            android:id="@+id/tvPet_Type"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Pet Type"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintVertical_bias="0.062" />

        <View
            android:id="@+id/view2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPet_Type"
            app:layout_constraintVertical_bias="0.033" />

        <TextView
            android:id="@+id/tvPet_Breed"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Breed"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintVertical_bias="0.059" />

        <View
            android:id="@+id/view3"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPet_Breed"
            app:layout_constraintVertical_bias="0.108" />

        <TextView
            android:id="@+id/tvPet_Gender"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintVertical_bias="0.054" />

        <View
            android:id="@+id/view4"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPet_Gender"
            app:layout_constraintVertical_bias="0.141" />

        <TextView
            android:id="@+id/tvPet_Weight"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Weight"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvEdit_Pet_Type"
            android:layout_width="199dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="56dp"
            android:gravity="right"
            android:text="Type"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.317"
            app:layout_constraintStart_toEndOf="@+id/tvPet_Type"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintVertical_bias="0.064" />

        <TextView
            android:id="@+id/tvEdit_Pet_Breed"
            android:layout_width="210dp"
            android:layout_height="29dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="32dp"
            android:gravity="right"
            android:text="Breed"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEdit_Pet_Gender"
            android:layout_width="210dp"
            android:layout_height="29dp"
            android:layout_marginBottom="24dp"
            android:gravity="right"
            android:text="Gender"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.756"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEdit_Pet_Weight"
            android:layout_width="210dp"
            android:layout_height="29dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:gravity="right"
            android:text="Weight"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvPet_Weight"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
